<%= javascript_tag do %>
$(function() {
  $( "#datepicker_from" ).datetimepicker({lang:'ru', format:'d.m.Y H:i'});
});
$(function() {
  $( "#datepicker_to" ).datetimepicker({lang:'ru', format:'d.m.Y H:i'});
});

$(function() {
    window.options_emot = {
      colors: ["#90ee7e", "#2b908f", "#f45b5b", "#7798BF", "#aaeeee", "#ff0066", "#eeaaee",
        "#55BF3B", "#DF5353", "#7798BF", "#aaeeee"],
      chart: {
        renderTo: 'chart_emot',
        type: 'spline',
        spacingBottom: 30,
        marginTop: 60,
        zoomType: 'x'
      },

      title: {
        text: 'Эмоциональность статей'
      },

      subtitle: {
        text: null
      },

      xAxis: {
        type: 'datetime',
        tickInterval: 24 * 3600 * 1000,
        tickWidth: 0,
        gridLineWidth: 1,
        labels: {
          align: 'left',
          x: 3,
          y: 16
        }
      },

      yAxis: [{ // left y axis
        title: {
          text: null
        },
        labels: {
          align: 'left',
          x: 3,
          y: 16,
          format: '{value:.,0f}'
        },
        showFirstLabel: true,
        min: -3,
        max: 3
      }],

      legend: {
        align: 'left',
        verticalAlign: 'top',
        y: 20,
        floating: true,
        borderWidth: 0
      },

      tooltip: {
        shared: true,
        crosshairs: true
      },

      plotOptions: {
        series: {
          name: 'Эмоциональность',
          cursor: 'pointer',
          marker: {
            lineWidth: 1
          }
        }
      },

      series: [{}]
    };//Options emot

    window.options_count = {
      chart: {
        renderTo: 'chart_count',
        type: 'spline',
        spacingBottom: 30,
        marginTop: 60,
        zoomType: 'x'
      },

      title: {
        text: 'Количество статей'
      },

      subtitle: {
        text: null
      },

      xAxis: {
        type: 'datetime',
        tickInterval: 24 * 3600 * 1000,
        tickWidth: 0,
        gridLineWidth: 1,
        labels: {
          align: 'left',
          x: 3,
          y: 16
        }
      },

      yAxis: [{ // left y axis
        title: {
          text: null
        },
        labels: {
          align: 'left',
          x: 3,
          y: 16,
          format: '{value:.,0f}'
        },
        showFirstLabel: true
      }],

      legend: {
        align: 'left',
        verticalAlign: 'top',
        y: 20,
        floating: true,
        borderWidth: 0
      },

      tooltip: {
        shared: true,
        crosshairs: true
      },

      plotOptions: {
        series: {
          name: 'Количество',
          cursor: 'pointer',
          color: '#2b908f',
          marker: {
            lineWidth: 1
          }
        }
      },

      series: [{}]
    };//Options count
    window.options_both = {
      chart:  {
                renderTo: 'chart_both',
                spacingBottom: 30,
                marginTop: 60,
                zoomType: 'x'
              },
      title:  {
                text: 'Общая динамика'
              },
      subtitle: {
                text: null
              },
      xAxis:  {
                type: 'datetime',
                tickInterval: 24 * 3600 * 1000,
                tickWidth: 0,
                gridLineWidth: 1,
                labels: {
                  align: 'left',
                  x: 3,
                  y: 16
                }
              },
      yAxis: [{ // Primary yAxis
                labels: {
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                },
                title: {
                    text: 'Количество статей',
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                }
              }, { // Secondary yAxis
                title: {
                  text: 'Эмоциональность статей',
                  style: {
                    color: Highcharts.getOptions().colors[2]
                  }
                },
                labels: {
                  style: {
                    color: Highcharts.getOptions().colors[2]
                  }
                },
                opposite: true,
                min: -3,
                max: 3
              }],
      tooltip: {
                shared: true
                },
      legend: {
                layout: 'vertical',
                align: 'left',
                x: 120,
                verticalAlign: 'top',
                y: 100,
                floating: true,
                backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
              },
      series: [{
                name: 'Количество',
                type: 'column'
              }, {
                name: 'Эмоциональность',
                type: 'spline',
                yAxis: 1    
              }]
    };//Options both
  });//function
  parseDate = function (s) {
    var match = s[0].match(/^([0-9]{1,2})\.([0-9]{1,2})\.([0-9]{2}) ([0-9]{1,2}):([0-9]{1,2})$/);
    if (match) {
      var d = Date.UTC(+('20' + match[3]), match[2] - 1, +match[1], +match[4], +match[5]);
      return [d, s[1]];
    }
  }

  $(function() {
    $.ajax({
      url: '/queries/<%= query.id %>/chart_data?source=<%= source %>'
    }).done(function(data) {
      Highcharts.setOptions({
            lang: {
                loading: 'Загрузка...',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                shortMonths: ['Янв', 'Фев', 'Март', 'Апр', 'Май', 'Июнь', 'Июль', 'Авг', 'Сент', 'Окт', 'Нояб', 'Дек'],
                exportButtonTitle: "Экспорт",
                printButtonTitle: "Печать",
                rangeSelectorFrom: "С",
                rangeSelectorTo: "По",
                rangeSelectorZoom: "Период",
                downloadPNG: 'Скачать PNG',
                downloadJPEG: 'Скачать JPEG',
                downloadPDF: 'Скачать PDF',
                downloadSVG: 'Скачать SVG',
                printChart: 'Напечатать график'
            }
    });
      var parsed_data_emot = data.emot.map(parseDate);
      var parsed_data_count = data.count.map(parseDate);
      window.options_emot.series[0].data = parsed_data_emot;
      window.options_count.series[0].data = parsed_data_count;
      window.options_both.series[0].data = parsed_data_count;
      window.options_both.series[1].data = parsed_data_emot;
      Highcharts.setOptions(Highcharts.theme);
      var chart_emot = new Highcharts.Chart(window.options_emot);
      var chart_count = new Highcharts.Chart(window.options_count);
      var chart_count = new Highcharts.Chart(window.options_both);
    });
  });  
<% end %>