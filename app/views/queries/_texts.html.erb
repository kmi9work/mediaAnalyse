<div style="text-align: center">
  <span class="text_header"><%= @query.title %></span>
  &nbsp; &nbsp; &nbsp;
  <span style="font-size: 24px;">
    <% if params['source'] == 'smi' %>
      СМИ
    <% else %>
      <%= link_to 'СМИ', query_path(@query.id, source: 'smi') %>
    <% end %>
    <% emot_smi = @query.last_hour_emot_smi current_user%>
    <%= emot_rate emot_smi %>
    &nbsp; | &nbsp;

    <% if params['source'] == 'sn' %>
      Соц. сети
    <% else %>
      <%= link_to 'Соц. сети', query_path(@query.id, source: 'sn') %>
    <% end %>
    <% emot_sn = @query.last_hour_emot_sn current_user %>
    <%= emot_rate emot_sn %>
    &nbsp; | &nbsp;

    <% if params['source'] == 'blogs' %>
      Блоги
    <% else %>
      <%= link_to 'Блоги', query_path(@query.id, source: 'blogs') %>
    <% end %>
    <% emot_blogs = @query.last_hour_emot_blogs current_user %>
    <%= emot_rate emot_blogs %>
  </span>
</div>

