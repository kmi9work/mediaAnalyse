<% if @categories %>
	<%= content_for :categories do %>
		<%= render partial: 'categories/categories', locals: {categories: @categories, not_new: true} %>
	<% end %>
<% end %>

<% if @queries %>
	<%= content_for :specific_js do %>
		<%= javascript_tag id: "specific_js" do %>
			$('#queries_accord').ready(function() {
				$('#queries_accord').accordion( "option", "active", <%= @queries.index(@query) %> );
			});		
		<% end %>
	<% end %>
	<%= content_for :queries do %>
		<%= render partial: 'categories/queries', locals: {queries: @queries, category_id: params[:category_id], not_new: true} %>
	<% end %>
<% end %>


<%= content_for :main do %>
	<%= render partial: 'texts', locals: {query: @query, texts: @texts} %>
<% end %>


