<% if @categories %>
	<%= content_for :categories do %>
		<%= render partial: 'categories/categories', locals: {not_new: true} %>
	<% end %>
<% end %>

<% if @queries %>
	<%= content_for :queries do %>
		<%= render partial: 'categories/queries', locals: {category_id: params[:category_id], not_new: true} %>
	<% end %>
<% end %>

<%= content_for :main do %>
	<%= render partial: 'queries/texts' %>
<% end %>


