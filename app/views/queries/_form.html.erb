<%= form_for(@query, class: "form-horizontal", role: "form") do |f| %>
  <% if @query.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@query.errors.count, "error") %> prohibited this query from being saved:</h2>

      <ul>
      <% @query.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <% unless @category %>
      <label class="col-sm-6 control-label" style="padding: 20px 0px"> Категория:</label>
      <div class="col-sm-6">
        <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :title) %>
      </div>
    <% else %>
      <%= hidden_field_tag :category_id, params[:category_id] %> 
    <% end %>
  </div>
  <div class="form-group" style="padding: 20px 0px">
    <label class="col-sm-6 control-label">Запрос:</label>
    <div class="col-sm-6">
      <%= f.text_field :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style="padding: 20px 0px">
    <label class="col-sm-6 control-label">Максимальное число запросов:</label>
    <div class="col-sm-6">
      <%= f.text_field :max_count, class: "form-control", value: 0 %>
    </div>
  </div>  
  <div class="form-group" style="padding: 20px 0px">
    <label class="col-sm-6 control-label">Поисковая система:</label>
    <div class="col-sm-6">
      <%= f.select :search_engine, options_for_select([ "Yandex News", "Yandex Blogs", "Google"], "Google"), class: "form-control" %>
    </div>
  </div>   
  <div class="form-group" style="padding: 20px 0px">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>