<!DOCTYPE html>
<html>
<head>
  <title>MediaAnalyse</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= javascript_tag do %>
    $(function() {
      return window.track_efeed_on = true;
    });
  <% end %>
</head>
<body>
<div id="logout"><%= link_to 'Выйти', logout_path %></div>

<div>
  <p id="notice"><%= flash[:notice] %></p>
  <p id="alert"><%= flash[:alert] %></p>
</div>

<!-- <font size="50" color="red"> Система не работает </font> -->
<div id="main" class="col-md-12">
  <a name="anctexts"></a>
  <div id="new_rows" style="display: none;">
    <span style="font-size:30px">
      <%= link_to 'Показать новые сообщения', show_new_emessages_path, remote: true %> (<span id="tcount">0</span>)
    </span>
  </div>
  <div class="row">
    <div class="row" style="margin-left: 30px;">
      <%= paginate @texts %>
      &nbsp; | &nbsp;
      Внешний вид:
      <%= link_to 'Обычный', '/efeed/style/default', remote: true %>,
      <%= link_to 'Синий', '/efeed/style/blue', remote: true %>
    </div>
    <div class="row">
      <div id="texts" class="col-md-9">
      <% @texts.each do |text| %>
        <% if session[:estyle] == "blue" %>
          <%= render 'queries/text', {text: text, background_color: '#03004d', color: '#00c2a8'} %>
        <% else %>
          <%= render 'queries/text', {text: text, background_color: '#e3ddb8', color: '#000'} %>
        <% end %>
      <% end %>
      </div>
      <div class="col-md-3">
        <input type="checkbox" name="selectAll" id="selectAllDomainList" /> Все <br>
        <%= form_tag select_esources_path do %>
          <label>Источники:</label><br>
          <% origins = Origin.all %>
          <% origins.each do |origin| %>
            <%= check_box_tag "select_sources[]", origin.id, session[:eorigins].include?(origin.id), id: dom_id(origin) %>
            <%= label_tag dom_id(origin), origin.title %><br>
          <% end %>
          <%= submit_tag 'Применить' %>
        <% end %>
        <%= link_to 'Изменить', edit_efeed_path %>
      </div>
    </div>
  </div>
</div>
<%= yield :specific_js %>
</body>
</html>
