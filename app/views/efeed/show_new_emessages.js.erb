$('#new_rows').hide();
$("hr").remove();
<% if session[:estyle] == "blue" %>
  $(".article").css('background-color', '#03004d');
<% else %>
  $(".article").css('background-color', '#e3ddb8');
<% end %>

$('#texts').prepend('<hr>');

<% @texts.reverse_each do |text| %>
  <% if session[:estyle] == "blue" %>
    $('#texts').prepend('<%= j render "text", text: text, background_color: "#040075", color: "#00c2a8"%>');
  <% else %>
    $('#texts').prepend('<%= j render "text", text: text, background_color: "#d6d5cf", color: "#000" %>');
  <% end %>
  
<% end %>